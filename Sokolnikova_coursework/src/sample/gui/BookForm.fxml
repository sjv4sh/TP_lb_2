      <HBox spacing="4.0">
         <children>
            <Button mnemonicParsing="false" onAction="#onSaveClick" text="Сохранить" />
            <Button mnemonicParsing="false" onAction="#onCancelClick" text="Отмена">
               <HBox.margin>
                  <Insets left="70.0" />
               </HBox.margin>
            </Button>
         </children>
         <padding>
            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
