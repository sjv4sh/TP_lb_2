            <TextField fx:id="txtTypeofissue">
               <HBox.margin>
                  <Insets />
               </HBox.margin></TextField>
         </children>
         <padding>
            <Insets bottom="4.0" left="4.0" right="4.0" top="4.0" />
         </padding>
      </HBox>
      <VBox fx:id="vboxSatire" spacing="4.0">
         <children>
            <HBox spacing="4.0">
               <children>
                  <Label prefHeight="17.0" prefWidth="275.0" text="Кол-во героев в рассказе" />
                  <TextField fx:id="txtCountOfHeroes" prefHeight="25.0" prefWidth="274.0">
